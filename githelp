#!/usr/bin/env ruby
# coding: utf-8

require 're_expand'
require './lib/files'

datadir = "#{File.dirname($0)}/data"

pat = " #{ARGV.join(' ')} "

entries = []
Dir.open(datadir).each { |file|
  next unless File.file?("#{datadir}/#{file}")
  next if file =~ /~$/
  entries += eval File.read("#{datadir}/#{file}")
}

g = ExpandRuby::Generator.new # re_expandのジェネレータ
entries.each { |entry|
  g.add entry[0], entry[1]
}

res = g.generate pat
res[0].each_with_index { |a,i| # ambig 0
  puts "[#{i}] #{a[0]}"
  puts a[1]
}

